{
    "datacenter": "you-tag",
    "data_dir": "{{ path_consul }}/data",
    "log_level": "INFO",
    "enable_syslog": true,
    "disable_update_check": true,
    "node_name" : "{{ ansible_hostname }}",
    "bind_addr": "{% if ansible_default_ipv4 is not defined %} 127.0.0.1 {% else %} {{ ansible_default_ipv4.address }} {% endif %}",
    "advertise_addr": "{% if ansible_default_ipv4 is not defined %} 127.0.0.1 {% else %} {{ ansible_default_ipv4.address }} {% endif %}",
    "client_addr": "{% if ansible_default_ipv4 is not defined %} 127.0.0.1 {% else %} {{ ansible_default_ipv4.address }} {% endif %}",
    "ui": true,
    "server" : true,
    "bootstrap_expect": 2,
    "start_join": [{% for host in srv_hostname_consul %} "{{ host.name }}" {{ host.demiliter }} {% endfor %}]
}
